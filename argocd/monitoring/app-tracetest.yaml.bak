apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: tracetest
  namespace: argocd
  finalizers:
  - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    namespace: tracetest
    server: https://kubernetes.default.svc
  project: default
  sources:
  - repoURL: https://kubeshop.github.io/helm-charts
    chart: tracetest
    targetRevision: 0.3.19
    helm:
      valueFiles:
      - $values/argocd/monitoring/tracetest/values/values.yaml
  - repoURL: https://github.com/sam-bowman/homelab-cluster
    targetRevision: HEAD
    ref: values
  - repoURL: https://github.com/sam-bowman/homelab-cluster
    path: argocd/monitoring/tracetest
    targetRevision: HEAD
  syncPolicy:
    automated:
      prune: true
      allowEmpty: true
    syncOptions:
    - CreateNamespace=true
    - ServerSideApply=true
    - PruneLast=true